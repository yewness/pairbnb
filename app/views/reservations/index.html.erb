<h1>Listing Reservations</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Listing</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user.name %></td>
        <td><%= reservation.listing.title %></td>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= link_to 'Show', listing_reservation_path(@listing, reservation) %></td>
        <td><%= link_to 'Edit', edit_listing_reservation_path(@listing, reservation) %></td>
        <td><%= link_to 'Destroy', listing_reservation_path(@listing, reservation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_listing_reservation_path %>
