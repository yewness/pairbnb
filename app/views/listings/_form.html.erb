<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :home_type %><br>
    <%= f.text_field :home_type %>
  </div>
  <div class="field">
    <%= f.label :room_type %><br>
    <%= f.text_field :room_type %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div><br>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div><br>
  <div class="large-10 large-centered columns">
    <%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
  </div><br>
  <div class="field">
    <%= f.hidden_field(:photo_cache) %>
    <%= f.label :photo %><br>
    <%= f.file_field(:photo) %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>